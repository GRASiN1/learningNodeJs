<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>
        <div class="container mt-4">
            <h1>
                <%= blog.title %>
            </h1>
            <img src="/<%= blog.coverImage %>" class="img-fluid rounded-start" alt="<%= blog.title %>" width="400px">
            <pre><%= blog.body %></pre>
        </div>
        <div class="container mt-3">
            <img src="<%= blog.createdBy.profilePhoto %>" width="50px">
            <%= blog.createdBy.fullName %>
        </div>
        <div class="container mt-3">
            <h3>Comments</h3>
            <% if (locals.user) { %>
                <form action="/blog/comments/<%= blog._id %>" method="post">
                    <div class="mb-3">
                        <input type="text" name="content" class="form-control" placeholder="Enter you comment">
                        <button type="submit" class="btn btn-primary mt-2">Add</button>
                    </div>
                </form>
                <% } %>
                    <% if (locals.comments) { %>
                        <% comments.forEach(comment=> { %>
                            <div class="container mt-3">
                                <img src="<%= comment.createdBy.profilePhoto %>" alt="" width="30px">
                                <%= comment.createdBy.fullName %>
                                    <div class="container mt-2">
                                        <pre><%= comment.content %></pre>
                                    </div>
                            </div>
                            <% }) %>
                                <% } %>
        </div>
        <%- include('./partials/script') %>
</body>

</html>